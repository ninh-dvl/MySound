<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@drawable/custom_background_play_song"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.PlaySongActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:id="@+id/toolbarplaysong"
        android:layout_height="?attr/actionBarSize">
    </androidx.appcompat.widget.Toolbar>
    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:id="@+id/viewpagerplaysong">
    </androidx.viewpager.widget.ViewPager>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="00:00"
                android:gravity="center"
                android:layout_weight="0.5"
                android:id="@+id/textviewtimesong"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <SeekBar
                android:id="@+id/seekbarsong"
                android:layout_weight="9"
                android:progressDrawable="@color/white"
                android:maxHeight="3dp"
                android:minHeight="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="00:00"
                android:gravity="center"
                android:layout_weight="0.5"
                android:id="@+id/textviewtotaltimesong"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_marginRight="15dp"
                android:id="@+id/imagebuttonsuffle"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/suffle"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <ImageButton
                android:layout_marginRight="15dp"
                android:id="@+id/imagebuttonpre"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/back"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
            <ImageButton
                android:layout_marginRight="15dp"
                android:id="@+id/imagebuttonplay"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/play"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
            <ImageButton
                android:layout_marginRight="15dp"
                android:id="@+id/imagebuttonnext"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/next"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
            <ImageButton
                android:layout_marginRight="15dp"
                android:id="@+id/imagebuttonrepeat"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/repeat"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>